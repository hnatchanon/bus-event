datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  createdAt DateTime @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  date        DateTime
  location    String
  tags        String[] // Array of tags
  createdAt   DateTime @default(now())
}